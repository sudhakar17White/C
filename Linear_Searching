
#include <stdio.h>

void main()
{

    int size,serach;
    
    printf("-----Linear Seraching-----\n\n");
    
    printf("Enter the size of array :");
    
    
    scanf("%d",&size);
    
    int a[size];
    
    for(int i=0;i<size;i++)
    { 
        
        scanf("%d",&a[i]);
        
    }
    
    
    
    
    printf("\nindex=[");
    for(int i=0;i<size;i++)
    { 
        
        printf("%d ",i);
        
    }
    printf("]");
    
    
    
    printf("\nvalue=[");
    for(int i=0;i<size;i++)
    { 
        
        printf("%d ",a[i]);
        
    }
    printf("]\n\n");
    
    printf("Enter the Serach Element:");
    scanf("%d",&serach);
    
    int flag=0;
    printf("\n\n[");
    for(int i=0;i<size;i++)
    { 
        
        if(a[i]==serach)
        { 
            printf("serach Element %d is present at location %d",serach,i);
            
        }
    }
    printf("]\n\n");
    
    
    
    
    
    
}
